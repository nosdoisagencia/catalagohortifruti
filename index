<script>
    const URL_PLANILHA = "https://docs.google.com/spreadsheets/d/e/2PACX-1vRfG9ACYb6dSnGeHioNdZpLL11MLm0FakxrhxMbL4ctyvRp-jAKNV7qz3zInyuaEIM7TbXAiUlo3upR/pub?gid=0&single=true&output=csv";

    let produtos = [];
    let carrinho = [];
    let categoriaAtiva = "Todos";

    async function buscarProdutos() {
        try {
            const response = await fetch(URL_PLANILHA);
            const data = await response.text();
            const linhas = data.split('\n').slice(1);
            
            produtos = linhas.map(linha => {
                const colunas = linha.split(',');
                if (colunas.length >= 5) {
                    return {
                        id: colunas[0].trim(),
                        cat: colunas[1].trim(),
                        nome: colunas[2].trim(),
                        preco: parseFloat(colunas[3].trim()),
                        img: colunas[4].trim()
                    };
                }
            }).filter(p => p && !isNaN(p.preco));

            render();
        } catch (e) {
            document.getElementById('lista-produtos').innerHTML = "Erro ao carregar produtos.";
        }
    }

    function render(filtro = "") {
        const grid = document.getElementById('lista-produtos');
        const filtrados = produtos.filter(p => 
            (categoriaAtiva === "Todos" || p.cat === categoriaAtiva) &&
            p.nome.toLowerCase().includes(filtro.toLowerCase())
        );

        grid.innerHTML = filtrados.map(p => `
            <div class="card">
                <img src="${p.img}" alt="${p.nome}">
                <div class="card-body">
                    <h3>${p.nome}</h3>
                    <div class="price">R$ ${p.preco.toFixed(2).replace('.',',')}</div>
                    <button class="btn-add" onclick="add('${p.id}')">Adicionar</button>
                </div>
            </div>
        `).join('');
    }

    function filtrar() { render(document.getElementById('busca').value); }

    function filtrarCat(cat, btn) {
        categoriaAtiva = cat;
        document.querySelectorAll('.cat-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        render();
    }

    function add(id) {
        const p = produtos.find(item => item.id === id);
        carrinho.push({...p, cartId: Date.now()});
        atualizarBarra();
    }

    function remover(cartId) {
        carrinho = carrinho.filter(p => p.cartId !== cartId);
        atualizarBarra();
        renderCarrinho();
    }

    function atualizarBarra() {
        const bar = document.getElementById('cart-bar');
        bar.style.display = carrinho.length > 0 ? 'flex' : 'none';
        document.getElementById('cart-count').innerText = carrinho.length;
        const total = carrinho.reduce((acc, p) => acc + p.preco, 0);
        document.getElementById('cart-total').innerText = `R$ ${total.toFixed(2).replace('.',',')} ‚ûî`;
    }

    function toggleModal(show) {
        document.getElementById('checkout-modal').classList.toggle('active', show);
        if(show) renderCarrinho();
    }

    function renderCarrinho() {
        const div = document.getElementById('itens-carrinho');
        div.innerHTML = carrinho.map(p => `
            <div class="cart-item">
                <img src="${p.img}">
                <div style="flex-grow:1">
                    <h4 style="margin:0; font-size:14px">${p.nome}</h4>
                    <strong>R$ ${p.preco.toFixed(2).replace('.',',')}</strong>
                </div>
                <button class="btn-del" onclick="remover(${p.cartId})"><i class="fas fa-trash"></i></button>
            </div>
        `).join('') || "Seu carrinho est√° vazio.";
    }

    function enviarWhatsApp() {
        const nome = document.getElementById('nome-cliente').value;
        const pgto = document.getElementById('pagamento').value;
        if(!nome || !pgto) return alert("Preencha nome e pagamento!");

        let msg = `*PEDIDO - HORTIFRUTI VIT√ìRIA*\n\n`;
        msg += `üë§ *Cliente:* ${nome}\n`;
        msg += `üí≥ *Pagamento:* ${pgto}\n\n`;
        msg += `*PRODUTOS:*\n`;
        carrinho.forEach(p => msg += `‚Ä¢ ${p.nome} (R$ ${p.preco.toFixed(2)})\n`);
        const total = carrinho.reduce((acc, p) => acc + p.preco, 0);
        msg += `\n*TOTAL: R$ ${total.toFixed(2).replace('.',',')}*`;

        window.open(`https://wa.me/5592994498445?text=${encodeURIComponent(msg)}`, '_blank');
    }

    buscarProdutos();
</script>
</body>
