<script>
    const produtos = [
        { id: 1, nome: "Uva Vit√≥ria", preco: 12.90, cat: "Frutas", img: "üçá" },
        { id: 2, nome: "Banana Prata", preco: 6.50, cat: "Frutas", img: "üçå" },
        { id: 3, nome: "Batata Inglesa", preco: 6.99, cat: "Legumes", img: "ü•î" },
        { id: 4, nome: "Suco de Laranja", preco: 15.00, cat: "Bebidas", img: "üçπ" },
        { id: 5, nome: "Tomate Italiano", preco: 8.50, cat: "Legumes", img: "üçÖ" },
        { id: 6, nome: "Alface Crespa", preco: 3.50, cat: "Verduras", img: "ü•¨" }
    ];

    let carrinho = [];
    let categoriaAtual = "Todos";

    function render(lista = produtos) {
        const list = document.getElementById('lista-produtos');
        list.innerHTML = lista.map(p => `
            <div class="card">
                <span class="emoji">${p.img}</span>
                <h3>${p.nome}</h3>
                <span class="price">R$ ${p.preco.toFixed(2)}</span>
                <button class="btn-add" onclick="add(${p.id})">Adicionar</button>
            </div>
        `).join('');
    }

    function filtrar() {
        const termo = document.getElementById('busca').value.toLowerCase();
        const filtrados = produtos.filter(p => 
            p.nome.toLowerCase().includes(termo) && 
            (categoriaAtual === "Todos" || p.cat === categoriaAtual)
        );
        render(filtrados);
    }

    function filtrarCat(cat, btn) {
        categoriaAtual = cat;
        
        // Atualiza visual dos bot√µes
        document.querySelectorAll('.cat-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        
        filtrar();
    }

    function add(id) {
        const prod = produtos.find(p => p.id === id);
        carrinho.push(prod);
        atualizarCarrinho();
    }

    function atualizarCarrinho() {
        const total = carrinho.reduce((acc, p) => acc + p.preco, 0);
        document.getElementById('cart-info').innerText = `üõí ${carrinho.length} itens`;
        document.getElementById('cart-total').innerText = `Total: R$ ${total.toFixed(2)}`;
    }

    function enviarWhatsApp() {
        if (carrinho.length === 0) return alert("Seu carrinho est√° vazio!");

        const numeroTelefone = "5592994498445";
        let mensagem = "*Novo Pedido - Hortifruti Vit√≥ria*\n\n";
        
        const resumo = carrinho.reduce((acc, curr) => {
            acc[curr.nome] = (acc[curr.nome] || 0) + 1;
            return acc;
        }, {});

        for (let item in resumo) {
            mensagem += `‚Ä¢ ${resumo[item]}x ${item}\n`;
        }

        const total = carrinho.reduce((acc, p) => acc + p.preco, 0);
        mensagem += `\n*Total: R$ ${total.toFixed(2)}*`;
        mensagem += `\n\nüìç *Endere√ßo de Entrega:* Rua Amap√°, n¬∫ 19 - Conjunto Vieiralves`;

        const link = `https://wa.me/${numeroTelefone}?text=${encodeURIComponent(mensagem)}`;
        window.open(link, '_blank');
    }

    render();
</script>

